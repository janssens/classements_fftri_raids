{% extends 'base.html.twig' %}

{% block title %}Athlete index{% endblock %}

{% block body %}
    <h1>Athlete index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Gender</th>
                <th>Dob</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for athlete in athletes %}
            <tr>
                <td>{{ athlete.id }}</td>
                <td>{{ athlete.email }}</td>
                <td>{{ athlete.firstname }}</td>
                <td>{{ athlete.lastname }}</td>
                <td>{{ athlete.gender }}</td>
                <td>{{ athlete.dob ? athlete.dob|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('athlete_show', {'id': athlete.id}) }}">show</a>
                    <a href="{{ path('athlete_edit', {'id': athlete.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('athlete_new') }}">Create new</a>
{% endblock %}
