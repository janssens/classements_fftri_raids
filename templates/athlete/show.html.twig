{% extends 'base.html.twig' %}

{% block title %}Athlete{% endblock %}

{% block body %}
    <h1>Athlete</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ athlete.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ athlete.email }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ athlete.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ athlete.lastname }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ athlete.gender }}</td>
            </tr>
            <tr>
                <th>Dob</th>
                <td>{{ athlete.dob ? athlete.dob|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    {% if gravatar_exists(athlete.email) %}
        <img src="{{ gravatar(athlete.email,200,'g','mp') }}" />
    {% endif %}
    <img src="{{ gravatar(athlete.email,200,'g','mp') }}" />

    <a href="{{ path('athlete_index') }}">back to list</a>

    <a href="{{ path('athlete_edit', {'id': athlete.id}) }}">edit</a>

    <ul>
    {% for registration in athlete.registrations %}
        <li>{{ registration.number }} <small>{{ registration.startDate|date('d-m-Y') }} -> {{ registration.endDate|date('d-m-Y') }} ({{ registration.date|date('d-m-Y') }})</small></li>
        {% for team in registration.teams %}
            <li><a href="{{ path('race_show',{'id':team.race.id}) }}">{{ team.race.name }}</a> - {{ team.name }} {% if (team.officialTeamRanking) %}(#{{ team.officialTeamRanking.categoryPosition }} {{ team.officialTeam.categoryHuman }} = {{ team.officialTeamRanking.points }}pts{% endif %})</li>
        {% endfor %}
    {% endfor %}
    </ul>

    <ul>
        {% for ranking in athlete.rankings %}
            <li><a href="{{ path('championship_show',{'id':ranking.championship.id}) }}">{{ ranking.championship.name }}</a> {{ ranking.championship.season }} <a href="{{ path('championship_show',{'id':ranking.championship.id,'category':ranking.category}) }}">categorie {{ ranking.categoryHuman }}</a> ({{ ranking.points }}pts)</li>
        {% endfor %}
    </ul>

    {{ include('athlete/_delete_form.html.twig') }}
{% endblock %}

