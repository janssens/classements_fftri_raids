{% extends 'base.html.twig' %}

{% block title %}Athlete{% endblock %}

{% block body %}
    <h1>Athlete</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ athlete.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ athlete.email }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ athlete.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ athlete.lastname }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ athlete.gender }}</td>
            </tr>
            <tr>
                <th>Dob</th>
                <td>{{ athlete.dob ? athlete.dob|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('athlete_index') }}">back to list</a>

    <a href="{{ path('athlete_edit', {'id': athlete.id}) }}">edit</a>

    <ul>
    {% for registration in athlete.registrations %}
        <li>{{ registration.number }} {{ registration.date|date('Y-m-d') }}</li>
        {% for team in registration.teams %}
            <li>{{ team.race.name }} - {{ team.name }} {% if (team.officialTeamRanking) %}(#{{ team.officialTeamRanking.categoryPosition }} {{ team.officialTeam.categoryHuman }} = {{ team.officialTeamRanking.points }}pts{% endif %})</li>
        {% endfor %}
    {% endfor %}
    </ul>

    <ul>
        {% for ranking in athlete.rankings %}
            <li>{{ ranking.season }} categorie {{ ranking.categoryHuman }} ({{ ranking.points }}pts)</li>
        {% endfor %}
    </ul>

    {{ include('athlete/_delete_form.html.twig') }}
{% endblock %}
