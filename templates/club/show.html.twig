{% extends 'base.html.twig' %}

{% block title %}Club{% endblock %}

{% block head %}
    <meta name="robots" content="noindex, follow">
{% endblock %}

{% block body %}
    <h1>Club {{ club.name }}</h1>

    {% for registration in club.registrations %}
        <div style="float: left">
        {{ include('athlete/_card.html.twig',{'athlete':registration.athlete}) }}
        </div>
    {% endfor %}
    <div style="clear: both"></div>

    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <a href="{{ path('club_index') }}">back to list</a>
    {% endif %}

    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <a href="{{ path('club_edit', {'id': club.id}) }}">edit</a>

        {{ include('club/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
