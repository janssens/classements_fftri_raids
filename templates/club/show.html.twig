{% extends 'base.html.twig' %}

{% block title %}[Club] {{ club.name }}{% endblock %}

{% block head %}
    <meta name="robots" content="noindex, follow">
{% endblock %}

{% block body %}
    <div class="text-center">
        <h1>Club {{ club.name }}</h1>
    </div>
    <div class="row">
        {% for athlete in club.UptodateAthletes %}
            <div class="col-6 col-sm-4 col-md-2" style="font-size: 11px">
            {{ include('athlete/_card.html.twig',{'athlete':athlete}) }}
            </div>
        {% endfor %}
    </div>
    <div style="clear: both"></div>
    <h2 class="text-center">Autres athletes ayant fait parti de ce club</h2>
    <div class="row">
        {% for athlete in club.OldAthletes %}
            <div class="col-6 col-sm-4 col-md-2" style="font-size: 11px">
                {{ include('athlete/_card.html.twig',{'athlete':athlete}) }}
            </div>
        {% endfor %}
    </div>
    <div style="clear: both"></div>

    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <a href="{{ path('club_index') }}">Retour Ã  la liste des clubs</a>
    {% endif %}

    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <a href="{{ path('club_edit', {'id': club.id}) }}">edit</a>

        {{ include('club/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
