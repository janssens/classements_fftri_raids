{% extends 'base.html.twig' %}

{% block title %}Championship index{% endblock %}

{% block body %}
    <h1>Liste des championnats</h1>

    <ul>
        {% for championship in championships %}
            <li>
                <a href="{{ path('championship_show', {'id': championship.id}) }}">{{ championship.name }}</a> {{ championship.season | lower }}
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('championship_edit', {'id': championship.id}) }}"><i class="fas fa-edit"></i></a>
                {% endif %}
            </li>
        {% else %}
            <li>
                no records found
            </li>
        {% endfor %}
    </ul>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('championship_new') }}" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp;Nouveau championnat</a>
    {% endif %}
{% endblock %}
