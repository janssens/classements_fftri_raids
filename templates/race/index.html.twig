{% extends 'base.html.twig' %}

{% block title %}Race index{% endblock %}

{% block body %}
    <h1>Race index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Date</th>
                <th>Athletes_per_team</th>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <th>actions</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for race in races %}
            <tr>
                <td>{{ race.id }}</td>
                <td><a href="{{ path('race_show', {'id': race.id}) }}">{{ race.name }}</a></td>
                <td>{{ race.date ? race.date|date('d M Y') : '' }}</td>
                <td>{{ race.athletesPerTeam }}</td>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                <td>
                    <a href="{{ path('race_edit', {'id': race.id}) }}">edit</a>
                </td>
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('race_new') }}">Create new</a>
{% endblock %}
