{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="text-center">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <label for="_username">Email</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="email" />
    <br>
    <label for="password">Mot de passe</label>
    <input type="password" id="password" name="_password" required="required" autocomplete="current-password" />
    <br>
    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">Se souvenir de moi</label>

    <input type="submit" id="_submit" name="_submit" value="Connection" class="btn btn-primary" />
</form>